.cartUl {
    list-style: none;
    max-height: 20rem;
    overflow: auto;
}

.closeButton {
    padding: 10px 30px;
    border-radius: 20px;
    border: 2px solid black;
    background-color: #cc0000;
    box-shadow: 0px 2px 6px black;
    font-weight: bold;
    color: white;
    cursor: pointer;
    margin-left: 20px;
}

.orderButton {
    padding: 10px 30px;
    border-radius: 20px;
    border: 2px solid black;
    background-color: #5796e6;
    box-shadow: 0px 2px 6px black;
    font-weight: bold;
    color: white;
    cursor: pointer;
    margin-left: 20px;
}

.buttons {
    display: flex;
    justify-content: space-between;
    margin: 12px 0;
}

.cash {
    display: flex;
    justify-content: space-between;
    margin: 5px 25px;
    font-size: 1.2rem;
    font-weight: bold;
}

.cats {
    display: block;
    padding: 5px;
}

.info {
    font-size: 0.7rem;
}

.purchase {
    min-height: 100px;
    padding: 10px 10px;
    display: flex;
    justify-content: space-around;
}

.close {
    width: 80px;
    height: 50px;
    margin-top: 30px;
    border-radius: 25px;
    box-shadow: 0 2px 8px black;
    border: solid black 2px;
    background-color: #5796e6;
    color: white;
    font-weight: bold;
    font-size: 14px;
    cursor: pointer;
}
